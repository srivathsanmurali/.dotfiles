#!/bin/sh

function service_myradio() {
  systemctl --user $1 myradio.service
}

function toggle_radio(){
  case "$(service_myradio is-active)" in
    active)
      mpc pause
      service_myradio stop
      ;;
    *)
      mpc play 
      service_myradio start
      ;;
  esac
}

case "$1" in
  start|on)
    mpc play
    service_myradio start
    ;;
  stop|off)
    mpc stop
    service_myradio stop
    ;;
  pause)
    mpc pause
    service_myradio stop
    ;;
  toggle|play-pause)
    toggle_radio
    ;;
  *)
    service_myradio status
    ;;
esac
