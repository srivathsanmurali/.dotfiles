#!/usr/bin/env sh
! echo "$1" | grep "https*://\S\+\.[A-Za-z]\+\S*" >/dev/null &&
	notify-send -t 5000 "That doesn't look like a full URL." && exit
RSSFILE="$HOME/.config/newsboat/urls"
if awk '{print $1}' "$RSSFILE" | grep "^$1$" >/dev/null; then
	notify-send -t 5000 "You already have this RSS feed."
else
	echo "$1" >> "$RSSFILE" && notify-send -t 5000 "RSS feed added."
fi
