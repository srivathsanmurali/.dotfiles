label-volume-foreground = 	${colors.fg}
label-muted = 			Muted
label-muted-foreground = 	${colors.fg-alt}

; Bar options
bar-volume-width = 		10
bar-volume-indicator =
bar-volume-fill = 		—
bar-volume-empty = 		—
bar-volume-gradient = 		false
bar-volume-fill-font = 		2
bar-volume-empty-font = 	2
; Bar-volume coloring
bar-volume-foreground-0 = 	#55aa55
