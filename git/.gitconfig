[user]
	email = srivathsan92@gmail.com
	name = Srivathsan Murali

[color]
	ui = always

[push]
	default = matching

[alias]
  # clone
  cl = clone
  rcl = clone --recursive

  # checkout
  co = checkout
  cb = checkout -b

  # diff
  d = diff --color-words
  dx = diff --cached

  #submodule update
  subpl = submodule update --init --recursive

  # log
  l = log --pretty=custom
  gr = log --graph --full-history --all --color --date=short --pretty=tformat:"%x1b[31m%h%x09%Cblue%cd%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"

[core]
  editor = vim
  ignorecase = false
  abbrev = 12

[pretty]
  # h -> abbrev hash
  # d -> head, remote, branch
  # ar -> relative data
  # s -> commit message
  # an -> author
  custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar \n\t%C(green)%s %C(yellow)(%an)"

[merge]
  tool = vimdiff

[help]
  #correct typos
  autocorrect = 1
