[user]
	email = sri@vathsan.com
	name = Srivathsan Murali
	signingkey = EC0A67FF

[color]
	ui = always

[push]
	default = upstream

[alias]
  # add
  a = add
  ap = add --patch

  # status
  s = status
  
  # clone
  cl = clone
  rcl = clone --recursive

  # checkout
  co = checkout
  cb = checkout -b

  # diff
  d = diff --color-words
  dx = diff --color-words --cached

  #submodule update
  subpl = submodule update --init --recursive

  # log
  l = log --pretty=custom2
  gr = log --graph --full-history --all --color --date=short --pretty=custom2

[core]
  editor = vim
  ignorecase = false
  abbrev = 12

[pretty]
  # h -> abbrev hash
  # d -> head, remote, branch
  # ar -> relative data
  # s -> commit message
  # an -> author
  custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar \n\t%C(green)%s %C(yellow)(%an)"
  custom2 = "%x1b[31m%h%x09%Cblue%cd%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"

[merge]
  tool = vimdiff

[help]
  #correct typos
  autocorrect = 1
[http]
	sslVerify = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
