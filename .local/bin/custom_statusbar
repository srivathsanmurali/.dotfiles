#!/bin/sh
[ -e ~/.config/studio.conf ] && . ~/.config/studio.conf


now_playing() {
  listening=""
  if [ -e "$HOME/.cache/studio.fifo" ]; then
    listening=""
  fi

  np=$(
    curl -sL "${STUDIO_URL}/api/playing" \
    | jq -j --raw-output '.album[0:20] + " - " + .title + " (" + .artist[0:20] + ")"'
  )

  if [ -n "$np" ]; then
    echo -n "$listening $np"
  else
    echo -n ""
  fi
}

get_volume() {
  volume=$(volctl status)
  if [ "$volume" = "mute" ]; then
    volume=" $volume"
  elif [ "$volume" -gt 66 ]; then
    volume=" $volume"
  elif [ "$volume" -gt 33 ]; then
    volume=" $volume"
  else
    volume=" $volume"
  fi

  echo -n "$volume"
}

time_now() {
  echo -n " $(date +'%A, %b %d %0I:%M%p')"
}

network() {
  nw=$(
    nmcli device status \
    | grep "\bconnected\b" \
    | tr -s ' '\
    | cut -d ' ' -f4- \
    | awk 'ORS="| "' \
    | sed 's/| $//g'
  )
  
  if [ -n "${nw}" ]; then
    nw=" ${nw}"
  fi
  echo -n "$nw"
}

get_battery_icon() {
  if [ $(cat /sys/class/power_supply/AC/online) == 1 ]; then
    echo -n " "
  elif [ "$1" -gt 95 ]; then
    echo -n " "
  elif [ "$1" -gt 75 ]; then
    echo -n " "
  elif [ "$1" -gt 50 ]; then
    echo -n " "
  elif [ "$1" -gt 25 ]; then
    echo -n " "
  else
    echo -n " "
  fi
}

get_bluetooth() {
  connected_device=$(bluetoothctl info | grep Name | cut -d: -f2- | xargs)
  if [ -n "$connected_device" ]; then
    echo -n " $connected_device"
  else
    echo -n ""
  fi
}

battery() {
  batcap=$(
    cat /sys/class/power_supply/BAT*/capacity \
    | awk '{sum+=$NF} END {print int(sum/NR)}'
  )
  
  if [ -n "$batcap" ]; then
    echo -n "$(get_battery_icon "$batcap")${batcap}"
  else
    echo -n ""
  fi
}

corona() {
  cat /tmp/corona |
  jq --raw-output '"Corona [ \(.confirmed.value)  \(.deaths.value)]"'
}

while true
do
  printf "%s %s %s %s %s %s \n" "$(corona)" "$(get_bluetooth)" "$(network)" "$(get_volume)" "$(battery)" "$(time_now)"
  sleep 10
done
