# vim: ft=conf:
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term2 "/usr/bin/alacritty"
set $term "/usr/local/bin/st"
# disable output while lid is down
set $laptop eDP-1
bindswitch lid:on output $laptop disable
bindswitch lid:off output $laptop enable

include "${HOME}/.config/sway/system"

# keyboard settings
input * xkb_layout "us"
input * xkb_options "ctrl:nocaps"

# Major bindings
## Terminal
bindsym $mod+Return exec $term2
bindsym $mod+Shift+Return exec $term

## App kill/launch
bindsym $mod+Shift+q kill
bindsym $mod+d exec "rofi -show combi -combi-modi 'drun,run' -show-icons -run-command 'swaymsg exec {cmd}'"
# bindsym $mod+d exec "dmenu_run"

## sway session
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec prompt_menu "Do you really want to exit sway?" "swaymsg exit"

## lock
bindsym Control+mod1+l exec "swaylock -e -i $HOME/.config/wall.jpg"

## screenshot
bindsym Print exec swayshot
bindsym Mod1+Print exec swayshot window
bindsym Shift+Print exec swayshot region

## other
bindsym Control+mod1+delete exec "power_options.sh"
bindsym Control+mod1+s exec "rofi -show ssh"
bindsym $mod+Shift+p exec "pass-dmenu"

# Moving around:
## move to near workspace
bindsym $mod+Tab exec aworkspace switch
bindsym $mod+Shift+Tab exec aworkspace move

# floating
floating_modifier $mod normal

# move 
bindsym Control+$mod+k move workspace to output up 
bindsym Control+$mod+j move workspace to output down
bindsym Control+$mod+h move workspace to output left
bindsym Control+$mod+l move workspace to output right
bindsym $mod+Shift+n move workspace to output up
bindsym $mod++n move workspace to output right

## Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

## or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## _move_ the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
## ditto, with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
## move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Layout stuff:
bindsym $mod+b splith
bindsym $mod+v splitv

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# sticky
bindsym $mod+x sticky toggle

bindsym $mod+a focus parent

# Scratchpad:
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# mako
bindsym $mod+Shift+m exec "/usr/bin/makoctl dismiss --all"

bindsym $mod+Prior workspace prev
bindsym $mod+Next workspace next

# Resizing containers:
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $dmenu_settings_mode "[b]luetooth | [m]ount | [u]mount | [n]etwork | [w]allpaper"
bindsym $mod+o mode $dmenu_settings_mode

mode $dmenu_settings_mode {
  bindsym b exec "bluetooth-dmenu"; mode "default"
  bindsym m exec "mount_menu"; mode "default"
  bindsym u exec "umount_menu"; mode "default"
  bindsym n exec "networkmanager_dmenu"; mode "default"
  bindsym w exec "wallpaper-dmenu"; mode "default"
  
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

set $dmenu_mode "[a]book | [b]ookmarks | [p]df | [s]tudio | w[o]rkspaces"
bindsym $mod+p mode $dmenu_mode
mode $dmenu_mode {
  bindsym a exec "abook_menu"; mode "default"
  bindsym b exec "bookmarks-menu"; mode "default"
  bindsym p exec "pdf_search"; mode "default"
  bindsym s exec "studio_menu"; mode "default"
  bindsym o exec "workspace-menu"; mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

set $music_menu "[p]lay | [s]kip | play[l]ists | [a]lbums"
bindsym $mod+m mode $music_menu
mode $music_menu {
  bindsym a exec "studio albums"; mode "default"
  bindsym p exec "studio play"; mode "default"
  bindsym s exec "studio skip"; mode "default"
  bindsym l exec "studio playlist"; mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bar {
    status_command custom_statusbar
    font InputMono 10
    position top
    strip_workspace_numbers yes
    wrap_scroll yes
}

#color
set $barColor             #2f343f
set $bg-color             #909099
set $inactive-bg-color    #2f343f
set $inactive-focused-color #2f343f
set $text-color           #fdf4f5
set $inactive-text-color  #676E7D
set $urgent-bf-color      #E53935 

# window colors
client.focused            $bg-color           $bg-color             $text-color           #00ff00   $bg-color
client.unfocused          $inactive-bg-color  $inactive-bg-color    $inactive-text-color  #00ff00   $inactive-bg-color
client.focused_inactive   $inactive-focused-color $inactive-focused-color $inactive-text-color  #00ff00   $inactive-bg-color
client.urgent             #E53935   #E53935 $text-color           #00ff00   #E53935

## light
bindsym XF86MonBrightnessUp exec "light -A 10"
bindsym XF86MonBrightnessDown exec "light -U 10"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id volctl up
bindsym XF86AudioLowerVolume exec --no-startup-id volctl down
bindsym XF86AudioMute exec --no-startup-id volctl mute
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

#bindsym $mod+f9 exec playerctl prev
#bindsym $mod+f10 exec playerctl play-pause
#bindsym $mod+f11 exec playerctl stop
#bindsym $mod+f12 exec playerctl next
bindsym $mod+f9 exec mpc prev
bindsym $mod+f10 exec radio toggle
bindsym $mod+f11 exec radio stop
bindsym $mod+f12 exec mpc next

gaps inner 5
smart_gaps on

default_border pixel 3
exec_always wall_change
exec_always startup sway

for_window [title="Microsoft Teams Notification"] floating enable
